<core:FragmentDefinition xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
	<l:Grid defaultSpan="L12 M12 S12" >
		<l:content>
			<List id="commentsListId" items="{/Event(0)/CommentsOnEvent}" headerText="Comments List">
				<items>
					<CustomListItem type="Inactive">
						<l:VerticalLayout width="100%">
							<RatingIndicator enabled="false" maxValue="5" value="{path : 'rating'}" />
							<TextArea width="100%" editable="false" value="{comment}" rows="2" />
							<Text class="customNicknameText" text="written by: {nickname}"/>
						</l:VerticalLayout>
					</CustomListItem>
				</items>
			</List>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>