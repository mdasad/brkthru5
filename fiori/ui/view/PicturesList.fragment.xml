<core:FragmentDefinition xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
	<l:Grid defaultSpan="L12 M12 S12" width="auto">
		<l:content>
			<f:SimpleForm minWidth="1024" maxContainerCols="2"
				editable="false" layout="ResponsiveGridLayout" title="{i18n>eventPicturesListTitle}"
				labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
				columnsL="1" columnsM="1">
				<f:content>
					<Text text="{i18n>eventPicturesEmptyListMsg}" />
					<Button icon="sap-icon://add" enabled="false" text="{i18n>addEventPicturesButton}" tooltip="{i18n>addEventPicturesButtonTooltip}"/>
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>